{
    "name": "evcc",
    "version": "0.30",
    "slug": "evcc",
    "description": "EV Charge Controller!",
    "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
    "startup": "application",
    "boot": "auto",
    "legacy": true,
    "stage": "experimental",
    "init": false,
    "options": {
        "uri": "0.0.0.0:7070",
        "interval": "10s",
        "log": "error",
        "levels": {
          "core": "debug",
          "lp-1": "debug",
          "lp-2": "debug"
        },
        "meters": [
          {
            "name": "grid",
            "type": "modbus",
            "model": "sdm",
            "uri": "rs485.fritz.box:23",
            "rtu": true,
            "id": 2,
            "power": "Power",
            "energy": "Sum"
          },
          {
            "name": "pv",
            "type": "default",
            "power": {
              "type": "script",
              "cmd": "/bin/sh -c \"echo 0\"",
              "timeout": "3s"
            }
          },
          {
            "name": "battery",
            "type": "default",
            "power": {
              "type": "script",
              "cmd": "/bin/sh -c \"echo 0\"",
              "timeout": "3s"
            }
          },
          {
            "name": "charge",
            "type": "default",
            "power": {
              "type": "script",
              "cmd": "/bin/sh -c \"echo 0\"",
              "timeout": "3s"
            }
          }
        ],
        "chargers": [
          {
            "name": "wallbe",
            "type": "wallbe",
            "uri": "192.168.0.8:502"
          }
        ],
        "vehicles": [
          {
            "name": "renault",
            "type": "renault",
            "title": "Zoe",
            "capacity": 60,
            "user": null,
            "password": null,
            "vin": "WREN...",
            "cache": "5m"
          }
        ],
        "site": {
          "title": "Home",
          "meters": {
            "grid": "grid",
            "pv": "pv",
            "battery": "battery"
          },
          "prioritySoC": 60
        },
        "loadpoints": [
          {
            "title": "Garage",
            "charger": "wallbe",
            "meters": {
              "charge": "charge"
            },
            "vehicle": "renault",
            "mode": "pv",
            "soc": {
              "min": 0,
              "target": 100,
              "alwaysUpdate": false,
              "estimate": false,
              "levels": [
                30,
                50,
                80,
                100
              ]
            },
            "onDisconnect": {
              "mode": "pv",
              "targetSoC": 100
            },
            "phases": 3,
            "sensitivity": 1,
            "enable": {
              "delay": "1m",
              "threshold": 0
            },
            "disable": {
              "delay": "5m",
              "threshold": 200
            },
            "guardduration": "10m",
            "mincurrent": 6,
            "maxcurrent": 16
          }
        ],
        "mqtt": null,
        "influx": null,
        "messaging": {
          "events": {
            "start": {
              "title": "Charge started",
              "msg": "Started charging in \"${mode}\" mode"
            },
            "stop": {
              "title": "Charge finished",
              "msg": "Finished charging ${chargedEnergy:%.1fk}kWh in ${chargeDuration}."
            },
            "connect": {
              "title": "Car connected",
              "msg": "Car connected at ${pvPower:%.1fk}kW PV"
            },
            "disconnect": {
              "title": "Car disconnected",
              "msg": "Car disconnected after ${connectedDuration}"
            }
          },
          "services": null
        }
      },
    "schema": {},
    "host_network": true,
    "webui": "http://[HOST]:[PORT:7070]/",
    "ports": {
      "7090/udp": 7090,
      "9522/udp": 9522
    }
  }